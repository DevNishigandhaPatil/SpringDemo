<?xml version = "1.0" encoding = "UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
     http://www.springframework.org/schema/context
     http://www.springframework.org/schema/context/spring-context-3.0.xsd">

<context:annotation-config/>

	<bean  class="com.hib.pro.SpringDemo.Student" name="student1">
		<property name="roll" value="1"></property>
		<property name="name" value="Ram"></property>
	</bean>


	<bean  class="com.hib.pro.SpringDemo.Address" name="address1">
		<property name="pin" value="6756325"></property>
		<property name="city" value="pune"></property>
	</bean>
	
	<bean  class="com.hib.pro.SpringDemo.Address" name="addr">
		<property name="pin" value="12234"></property>
		<property name="city" value="mumbai"></property>
	</bean>


</beans>
